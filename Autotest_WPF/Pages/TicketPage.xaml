<Page x:Class="Autotest_WPF.TicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autotest_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800" Background="#FFC1CBFF"
      Title="TicketPage">
    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="DataContext" Value="{Binding Text}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="BlanchedAlmond"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
       </Style>
    </Page.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="TicketPanel">

            </StackPanel>
        </ScrollViewer>
      
    </Grid>
</Page>
